<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="popup_anim_style">
        <item name="android:windowEnterAnimation">@anim/animation_popu_enter</item>
        <item name="android:windowExitAnimation">@anim/animation_popu_exit</item>
    </style>

    <style name="AutoButton">
        <item name="buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="colorButtonNormal">?attr/colorAccent</item>
    </style>

</resources>
